

block navbar
    nav(class="navbar navbar-expand-lg navbar-dark bg-dark")
        .container-fluid
            a#all-link(class="navbar-brand" href="/index?category=all") Stylish
            button(class="navbar-toggler" type="button" 
                data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" 
                aria-controls="navbarNavAltMarkup" aria-expanded="false" 
                aria-label="Toggle navigation")
                span(class="navbar-toggler-icon")
            div(class="collapse navbar-collapse" id="navbarNavAltMarkup")
                .navbar-nav.me-auto.mb-2.mb-lg-0
                    //- left side
                    a#women-link(class="nav-link active" aria-current="page" href="/index?category=women") Women
                    a#men-link(class="nav-link active" aria-current="page" href="/index?category=men") Men
                    a#accessories-link(class="nav-link active" aria-current="page" href="/index?category=accessories") Accessories

                div(class="navbar-nav ml-auto")
                    //- right side
                    if(currentUser)
                        form#post(action=`/user/logout` method='POST')
                            input.btn.btn-dark(type='submit' value='Logout')
                    else 
                        a.btn(class="nav-link" href="/user/signup") Signup
                        a.btn(class="nav-link" href="/user/login") Login
    
